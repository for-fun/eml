{% extends '::admin.html.twig' %}

{% block body -%}
    <div class="row content-header">
        <div class="col-xs-4 title">
            <h3>Страницы</h3>
        </div>
        <div class="col-xs-8 action">
            <a class="btn btn-info btn-sm" href="{{ path('page_new') }}">Добавить страницу</a>
        </div>
    </div>

    <table class="table table-bordered">
        <thead>
        <tr>
            <th>Название</th>
            <th>ЧПУ</th>
            <th>Дата создания</th>
            <th>Действия</th>
        </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>{{ entity.name }}</td>
                <td><a href="{{ path('page_show', { 'id': entity.id }) }}" target="_blank">{{ entity.url }}</a></td>
                <td>{% if entity.date %}{{ entity.date|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                    <a class="btn btn-default btn-xs" href="{{ path('page_edit', { 'id': entity.id }) }}">Изменить</a>
                    {{ render(controller("MapsPageBundle:Admin/Admin:deleteForm", {'id': entity.id})) }}

                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
