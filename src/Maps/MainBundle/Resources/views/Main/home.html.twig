{% extends '@site_theme/site.html.twig' %}


{% block containerStart %}{% endblock %}
{% block header %}{% endblock %}
{% block containerEnd %}{% endblock %}
{% block body %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-xs-8 left">
                <div class="home-menu">
                    {{ knp_menu_render('MapsMainBundle:MenuBuilder:homeMenu', {'currentClass': 'active'}) }}
                </div>
            </div>
            <div class="col-xs-4 right">
                <div class="home-menu rightMenu">
                    {{ knp_menu_render('MapsMainBundle:MenuBuilder:homeMenuRight', {'currentClass': 'active'}) }}
                </div>
            </div>
    </div>
    <div class="home-center">
        <div class="home-name">Единомышленники</div>
        <div class="home-name-bottom">Введите тему поиска единомышленников!</div>
        <form class="search-main" method="get" action="/search/">
            <input type="hidden" name="searchid" value="2168997">
            <input required="required" name="text" disabled="disabled" class="typeahead" type="text" placeholder="">
            <button class="btn-submit" type="submit">&nbsp;&nbsp;Поиск&nbsp;&nbsp;</button>
        </form>
    </div>
    <br/>
    <br/>
    <br/>
    <br/>
    <div class="home-footer">
        <div class="row">
            <div class="col-xs-6 left">
                Версия 3.1
            </div>
            <div class="col-xs-6 right">
                Единомышленники 2014 (с)
            </div>
        </div>
    </div>
    </div>
{% endblock %}
