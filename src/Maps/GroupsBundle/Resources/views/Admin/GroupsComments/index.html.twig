{% extends '@admin_theme/admin.html.twig' %}

{% block body -%}
    <h1>GroupsComments list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Authorname</th>
                <th>Authorcontact</th>
                <th>Authortext</th>
                <th>Ip</th>
                <th>Allowed</th>
                <th>Created</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('groupscomments_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.authorName }}</td>
                <td>{{ entity.authorContact }}</td>
                <td>{{ entity.authorText }}</td>
                <td>{{ entity.ip }}</td>
                <td>{{ entity.allowed }}</td>
                <td>{% if entity.created %}{{ entity.created|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('groupscomments_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('groupscomments_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('groupscomments_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
