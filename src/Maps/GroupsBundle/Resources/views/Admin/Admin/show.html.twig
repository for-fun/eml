{% extends '@admin_theme/admin.html.twig' %}

{% block body -%}
    <h1>Groups\Groups</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Text</th>
                <td>{{ entity.text }}</td>
            </tr>
            <tr>
                <th>Author_name</th>
                <td>{{ entity.authorname }}</td>
            </tr>
            <tr>
                <th>Author_contact</th>
                <td>{{ entity.authorcontact }}</td>
            </tr>
            <tr>
                <th>Author_info</th>
                <td>{{ entity.authorinfo }}</td>
            </tr>
            <tr>
                <th>Ip</th>
                <td>{{ entity.ip }}</td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{{ entity.created|date('Y-m-d H:i:s') }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('groups_groups') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('groups_groups_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
