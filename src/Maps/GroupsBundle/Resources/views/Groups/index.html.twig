{% block body %}
    {% set notice = app.session.flashbag.get('notice') %}
    {% if notice is not empty %}
        {% for flashMessage in notice %}
            <div class="alert alert-success">
                {{ flashMessage }}
            </div>
        {% endfor %}
        <br/>
    {% endif %}

    <h4><b>Список всех групп:</b></h4>
    <br/>
    <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
    <!-- Проверка блока рекламы -->
    <ins class="adsbygoogle"
         style="display:inline-block;width:300px;height:250px"
         data-ad-client="ca-pub-3839845066639831"
         data-ad-slot="8389778500"></ins>
    <script>
        (adsbygoogle = window.adsbygoogle || []).push({});
    </script>
    <div class="groups clearfix">
        {% for group in groups %}
            <div class="item">
                <a href="{{ path("site_groups_show", {id: group.id}) }}">{{ group.name }}</a>
            </div>
        {% endfor %}
    </div>
    <br/>
    <img src="http://ednml.ru/forum_img/ed.png" alt="">
{% endblock %}