{% extends '@admin_theme/admin.html.twig' %}

{% block body -%}
    <h1>Groups\Groups list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Text</th>
                <th>Author_name</th>
                <th>Author_contact</th>
                <th>Author_info</th>
                <th>Ip</th>
                <th>Created</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('groups_groups_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.text }}</td>
                <td>{{ entity.authorname }}</td>
                <td>{{ entity.authorcontact }}</td>
                <td>{{ entity.authorinfo }}</td>
                <td>{{ entity.ip }}</td>
                <td>{% if entity.created %}{{ entity.created|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('groups_groups_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('groups_groups_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('groups_groups_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
